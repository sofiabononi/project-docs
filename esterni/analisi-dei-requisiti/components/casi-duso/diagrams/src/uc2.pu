@startuml uc2
!include ../style.pu

skinparam RectangleFontSize 16

actor :Utente: as A
actor :Grafana: as A1

rectangle "UC2 - Addestramento del predittore"{
  together {
    usecase (UC2.1) as "UC2.1\n Scelta del flusso di dati"
    usecase (UC2.2) as "UC2.2\n Scelta del modello"
}
    together {
    usecase (UC6) as "UC6\n Scelto modello Support Vector Machine"
    usecase (UC7) as "UC7\n Scelto modello regressione lineare"
    usecase (UC8) as "UC8\n Scelto modello regressione esponenziale"
    usecase (UC9) as "UC9\n Scelto modello regressione logaritmica"
    usecase (UC10) as "UC10\n Scelto modello rete neurale"
    usecase (UC11) as "UC11\n Scelto modello SVM adattata alla regressione"
  }
}

:A: -- (UC2.1)
:A: -- (UC2.2)

(UC2.1) --- :A1:

(UC2.2) <|-- (UC6)
(UC2.2) <|-- (UC7)
(UC2.2) <|-- (UC8)
(UC2.2) <|-- (UC9)
(UC2.2) <|- (UC10)
(UC2.2) <|- (UC11)

@enduml
