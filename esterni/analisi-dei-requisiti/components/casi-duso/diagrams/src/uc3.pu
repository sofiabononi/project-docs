@startuml uc3
!include ../style.pu

skinparam RectangleFontSize 18

actor :Utente: as A
actor :Grafana: as A1

rectangle "UC3 - Configurazione del plug-in per la predizione"{
  together {
  usecase (UC3.1) as "UC3.1\n Caricamento dei risultati"
  usecase (UC3.2) as "UC3.2\n Scelta dei nodi"
  usecase (UC3.3) as "UC3.3\n Vis. della previsione"

  usecase (UC18) as "UC18\n Vis. messaggio di errore \n file di addestramento invalido"
  usecase (UC19) as "UC19\n Vis. messaggio di errore \n nessun file di addestramento"

  usecase (UC20) as "UC20\n Vis. messaggio di errore \n collegamento nodo"
  usecase (UC21) as "UC21\n Vis. messaggio di errore \n nessun nodo collegato"

  usecase (UC4) as "UC4\n Vis. attraverso un grafico"
  usecase (UC5) as "UC5\n Vis. attraverso un indicatore"
  usecase (UC22) as "UC22\n Vis. messaggio di errore: \n tipo di visualizzazione non definita"
  }
}

:A: -- (UC3.1)
:A: -- (UC3.2)
:A: -- (UC3.3)
(UC3.1) --- :A1:
(UC3.2) --- :A1:
(UC3.3) --- :A1:

(UC3.1) <. (UC18) : <<extends>>
(UC3.1) <. (UC19) : <<extends>>

(UC18)-[hidden]-(UC19)

(UC3.2) <. (UC20) : <<extends>>
(UC3.2) <.left. (UC21) : <<extends>>

(UC3.3) <. (UC22) : <<extends>>
(UC3.3) <|-left- (UC4)
(UC3.3) <|-left- (UC5)


@endluml
